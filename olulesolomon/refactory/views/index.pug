doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  title Refactory assessment
.row.p-5.m-5
  .col-sm
    .border.container
      .row
        .col-12.mt-0.mb-0
            h3.text-center.text-lead#success-message(style='background-color: green;')
        .col-12.mt-0(style='background-color: indigo;')
          h3.text-center.text-lead(style='color: aliceblue; font-size: large;')
            | Student Registration Form
       
      form#form-id(action='/' enctype='multipart/form-data' name='studentform' method='post')
        .row
          .col-8
            .form-group.mb-3
              label(for='surname' name='surname') Sur name 
                span(style='color: red;') *
              input.form-control(type='text' name='surname' placeholder='Enter surname')
              small#surname-error(style='color: red;')
            // givenname
            .form-group.mb-3
              label(for='givenname' name='givenname') Given name
                span(style='color: red;') *
              input.form-control(type='text' name='givenname' placeholder='Enter given name')
              small#givenname-error(style='color: red;')
            // title
            .form-group.mb-3
              label(for='title' name='title') Title
                span(style='color: red;') *
              select#title.form-control(name='title')
                option(value='')
                option(value='Mr') Mr
                option(value='Mrs') Mrs
                option(value='Miss') Miss
                option(value='Ms') Ms
                option(value='Dr') Dr
                option(value='Prof') Prof
              small#title-error(style='color: red;')
          .col-4.mt-4
            .row
                .col-12.form-control.mb-2(style='height: 150px;') 
        
            .col-12
              
              input#uploadphoto(type='file' name='uploadphoto' hidden)
              label#uploadphoto.text-light.d-flex.justify-content-center(for="uploadphoto" style='background-color: indigo; text: white;padding: 0.2rem;font-family: sans-serif;border-radius: 0.3rem;cursor: pointer; margin-top: 0.5rem;' ) Upload photo
        .col-md-12
            label.form-label(for='inputEmail4') Gender
                span(style='color: red;') *
            br
            #gender-box.form-control
                .form-check.form-check-inline.d-flex.justify-content-left
                    .form-check.form-check-inline.col-4
                        input#inlineRadio1.form-check-input(type='radio' name='gender' value='Male')
                        label.form-check-label(for='inlineRadio1') Male
                    .form-check.form-check-inline.col-4
                        input#inlineRadio2.form-check-input(type='radio' name='gender' value='Female')
                        label.form-check-label(for='inlineRadio2') Female
                p#gender-error(style='display: none') 
        .row.mb-3
          .col-6.input-div-left
            label.DOB Date of Birth
                span(style='color: red;') *
            input.form-control(type='date' max='2019-12-31' name='dob')
            small#DOB-error(style='color: red;')
          .col-6.input-div-right
            label.Country Place of country
                span(style='color: red;') *
            select.form-control(name='country' id='')
              option(value='')
              option(value='Kenya') Kenya
              option(value='Rwanda') Rwanda
              option(value='Uganda') Uganda
              option(value='Tanzania') Tanzania
              option(value='Burundi') Burundi
            small#country-error(style='color: red;')
        .row.mb-3
          .form-group.col-12
            label(for='residence') Place of Residence
                span(style='color: red;') *
            input.residence.form-control(type='text' name='residence')
            small#residence-error(style='color: red;')
        .row.mb-3
          .form-group.col-12
            label(for='nationality') Nationality
                span(style='color: red;') *
            input.nationality.form-control(type='nationality' name='nationality' class='placeholder="Enter nationality"')
            small#nationality-error(style='color: red;')
        .row.mb-3
            .border-top.mb-2.col-12
            .col-12.d-flex.justify-content-end
                button.btn(type='submit', style='margin-left:10px; background: indigo; padding: 8px 25px; margin-left: 30px; border-radius: 4px; font-weight: 400; color: #fff;') Submit
script(src='/javascript/app.js')
